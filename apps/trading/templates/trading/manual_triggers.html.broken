        const totalFailed = data.total_failed;
        const totalErrors = data.total_errors;
        const volumeFilters = data.volume_filters;

        // Store contracts globally for P&L recalculation
        window.currentFuturesResults = allContracts;

        document.getElementById('resultTitle').textContent = `Futures Analysis Results`;
        document.getElementById('resultBadge').textContent = `${totalPassed} PASSED / ${totalFailed} FAILED`;
        document.getElementById('resultBadge').className = 'result-badge ' + (totalPassed > 0 ? 'pass' : 'fail');

        // Separate top 3 and rest
        const top3Contracts = allContracts.slice(0, 3);
        const remainingContracts = allContracts.slice(3);

        // Build HTML for contracts (both top 3 and remaining)
        let contractsHTML = '';

        function getColorScheme(contract, rank) {
            const isPassed = contract.verdict === 'PASS';
            const isFailed = contract.verdict === 'FAIL';
            const isError = contract.verdict === 'ERROR';
            const score = contract.composite_score || 0;

            let rankEmoji, bgGradient, buttonColor, riskLabel, riskColor;

            // COLOR CONVENTION (User requirement):
            // Green = PASS (score >= 50) - ACCEPTED
            // Orange = Risky (score 40-49) - RISKY
            // Red = FAIL (score < 40) - DON'T TRADE

            if (isError) {
                rankEmoji = '‚ùå';
                bgGradient = '#EF4444 0%, #DC2626 100%';  // Red
                buttonColor = '#DC2626';
                riskLabel = 'ERROR';
                riskColor = '#EF4444';
            } else if (isPassed && score >= 60) {
                // Strong PASS - Green
                if (rank === 1) rankEmoji = 'ü•á';
                else if (rank === 2) rankEmoji = 'ü•à';
                else if (rank === 3) rankEmoji = 'ü•â';
                else rankEmoji = '‚úÖ';
                bgGradient = '#10B981 0%, #059669 100%';  // Green
                buttonColor = '#059669';
                riskLabel = 'ACCEPTED';
                riskColor = '#10B981';
            } else if (isPassed && score >= 50) {
                // Marginal PASS - Light Green
                rankEmoji = '‚úÖ';
                bgGradient = '#34D399 0%, #10B981 100%';  // Light Green
                buttonColor = '#10B981';
                riskLabel = 'ACCEPTED';
                riskColor = '#10B981';
            } else if (score >= 40) {
                // Risky - Orange
                rankEmoji = '‚ö†Ô∏è';
                bgGradient = '#F59E0B 0%, #D97706 100%';  // Orange
                buttonColor = '#D97706';
                riskLabel = 'RISKY';
                riskColor = '#F59E0B';
            } else {
                // FAIL - Red
                rankEmoji = '‚ùå';
                bgGradient = '#EF4444 0%, #DC2626 100%';  // Red
                buttonColor = '#DC2626';
                riskLabel = 'DON\'T TRADE';
                riskColor = '#EF4444';
            }

            return { rankEmoji, bgGradient, buttonColor, riskLabel, riskColor };
        }

        /**
         * Calculate P&L for a given price movement
         */
        function calculatePnL(entryPrice, targetPrice, lotSize, direction) {
            const priceMove = targetPrice - entryPrice;
            const pnl = direction === 'LONG' ? (priceMove * lotSize) : (-priceMove * lotSize);
            const pnlPct = ((targetPrice - entryPrice) / entryPrice) * 100;
            return { pnl, pnlPct };
        }

