    // Recalculate position based on user-entered lot sizes
    function recalculatePosition() {
        const callLots = parseInt(document.getElementById('callLotsInput').value) || 0;
        const putLots = parseInt(document.getElementById('putLotsInput').value) || 0;

        // Get stored data
        const dataElement = document.getElementById('positionData');
        if (!dataElement) {
            console.error('Position data not found');
            return;
        }

        const data = JSON.parse(dataElement.textContent);
        const marginData = data.margin_data;
        const strangle = data.strangle;
        const LOT_SIZE = 50;

        // Recalculate everything
        const callQuantity = callLots * LOT_SIZE;
        const putQuantity = putLots * LOT_SIZE;
        const callPremium = strangle.call_premium * LOT_SIZE * callLots;
        const putPremium = strangle.put_premium * LOT_SIZE * putLots;
        const totalPremium = callPremium + putPremium;

        const totalLots = callLots + putLots;
        const totalMargin = marginData.margin_per_lot * totalLots;
        const marginUtil = (totalMargin / marginData.available_margin) * 100;

        // Update UI
        document.getElementById('callQuantity').textContent = callQuantity;
        document.getElementById('putQuantity').textContent = putQuantity;
        document.getElementById('callPremium').textContent = callPremium.toFixed(0);
        document.getElementById('putPremium').textContent = putPremium.toFixed(0);
        document.getElementById('totalMargin').textContent = '‚Çπ' + totalMargin.toLocaleString();
        document.getElementById('totalPremium').textContent = '‚Çπ' + totalPremium.toLocaleString();
        document.getElementById('marginUtil').textContent = marginUtil.toFixed(1) + '%';
        document.getElementById('maxProfit').textContent = '‚Çπ' + totalPremium.toLocaleString();

        // Update margin util color
        const marginUtilElement = document.getElementById('marginUtil');
        marginUtilElement.style.color = marginUtil > 70 ? '#FEE2E2' : '#FEF3C7';

        // Store updated lots for trade execution
        window.currentCallLots = callLots;
        window.currentPutLots = putLots;
    }

